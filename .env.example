# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/?retryWrites=true&w=majority

# Tournament Configuration
# Format: YYYY-MM-DDTHH:mm:ssZ (ISO 8601 UTC)
# Example: 2025-12-25T12:00:00Z

# Backend variable (Required for server-side status and validation)
TOURNAMENT_START_UTC=2025-12-25T12:00:00Z
TOURNAMENT_END_UTC=2026-01-01T12:00:00Z

# Frontend variable (Required for Start page countdown/status)
VITE_TOURNAMENT_START_UTC=2025-12-25T12:00:00Z
VITE_TOURNAMENT_END_UTC=2026-01-01T12:00:00Z

# Server Port (Optional, defaults to 10000)
PORT=10000
